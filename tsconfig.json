{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@types*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
